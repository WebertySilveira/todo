{
    "name": "root/html",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
      "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.41",
        "phpstan/phpstan": "^1.10",
        "phpmd/phpmd": "^2.15",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "scripts": {
        "check": [
            "@phpstan",
            "@cs:check"
        ],

        "phpstan": "phpstan analyze --level 9 ./app",
        "cs:check": "phpcs ./app",
        "cs:fix": "php-cs-fixer fix ./app"
    }
}
